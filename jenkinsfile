pipeline {
    agent any

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        MAVEN_HOME = '/usr/share/maven'
        EC2_USER = 'ubuntu'
        EC2_HOST = '16.170.208.135'
        AWS_KEY = '/home/jenkins/.ssh/tour.pem'
        MONGO_URI = credentials('MONGO_ATLAS_URI')
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Sayali-kamble/TourPlanner.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to AWS') {
            steps {
                sh 'scp -i $AWS_KEY target/tour-planner.jar $EC2_USER@$EC2_HOST:/home/ec2-user/'
                sh 'ssh -i $AWS_KEY $EC2_USER@$EC2_HOST "nohup java -jar /home/ec2-user/tour-planner.jar > output.log 2>&1 &"'
            }
        }
    }
}

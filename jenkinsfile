pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1' // Change to your AWS region
        S3_BUCKET = 'your-s3-bucket-name' // Change to your S3 bucket
        EC2_INSTANCE = 'your-ec2-instance-id' // Change to your EC2 instance ID
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo.git'
            }
        }

        stage('Build Backend') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }

        stage('Build React Frontend') {
            steps {
                script {
                    sh '''
                    cd frontend
                    npm install
                    npm run build
                    '''
                }
            }
        }

        stage('Deploy to S3 (Frontend)') {
            steps {
                script {
                    sh '''
                    aws s3 sync frontend/build s3://$S3_BUCKET --delete
                    '''
                }
            }
        }

        stage('Deploy to EC2 (Backend)') {
            steps {
                script {
                    sshagent(['your-ec2-ssh-key']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@$EC2_INSTANCE <<EOF
                        cd /home/ec2-user/tour-planner
                        git pull origin main
                        mvn clean package
                        sudo systemctl restart tour-planner.service
                        EOF
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
